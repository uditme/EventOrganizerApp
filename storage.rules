rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(resource, path).data.some_field == true
// allow read: if firestore.get(resource, path).data.some_field == true

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload voice messages
    match /voice-messages/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && resource.size < 10 * 1024 * 1024 // 10MB limit
                   && (resource.contentType.matches('audio/.*') || 
                       resource.contentType.matches('video/webm'));
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
